<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_alignTop="@id/image"
                android:maxLines="2"
                android:padding="5dp"
                android:text="扁鹊汇双人餐，提供免费wifi，尽享精致美食"
                android:textColor="#9E9E9E"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/newMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_toRightOf="@id/image"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="78"
                android:textColor="#3198C5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newMoney_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/newMoney"
                android:layout_below="@id/content"
                android:layout_toRightOf="@id/newMoney"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="元"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/oldMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/newMoney_t"
                android:layout_below="@id/content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/newMoney_t"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="100元"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />

           <!--  <TextView
                android:id="@+id/oldMoney_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/oldMoney"
                android:layout_below="@id/content"
                android:layout_toRightOf="@id/oldMoney"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="元"
                android:textColor="#9E9E9E"
                android:textSize="12sp" /> -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/oldMoney"
                android:layout_alignParentRight="true"
                android:layout_below="@id/content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/saleCount_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="已售 "
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/saleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:text="113 "
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/isYuyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_favorite_off"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/category_item_l" />

</LinearLayout>