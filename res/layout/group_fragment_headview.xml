<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <GridView 
        android:id="@+id/group_headview_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:numColumns="4"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        />
	
    <TextView 
        android:id="@+id/group_headview_guesslike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/group_headview_guesslike"
        android:textColor="@color/group_headview_guesslike"
        android:textSize="@dimen/group_headview_guesslike"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    
</LinearLayout>
